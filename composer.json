{
	"type": "mediawiki-extension",
	"description": "Allow leaving inline comments on MediaWiki pages",
	"homepage": "https://mediawiki.org/wiki/Extension:InlineComments",
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "49.0.0",
		"mediawiki/mediawiki-phan-config": "0.18.0",
		"mediawiki/minus-x": "2.0.0",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.4.0"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"@phpcs",
			"minus-x check ."
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"phan": "phan -d . --long-progress-bar",
		"phpcs": "phpcs -sp --cache",
		"phpunit": "php ../../tests/phpunit/phpunit.php tests/phpunit/",
		"test-all": [
			"@test",
			"npm test",
			"@phpunit",
			"@phan"
		]
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
